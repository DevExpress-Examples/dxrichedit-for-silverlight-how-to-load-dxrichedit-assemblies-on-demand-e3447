<UserControl x:Class="RichEditLoadOnDemandSL.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="SandyBrown">
        <StackPanel x:Name="stackPanel">
            <TextBlock x:Name="tbInfo">Initial layout of the page</TextBlock>
            <Button x:Name="button1" Cursor="Hand" HorizontalAlignment="Left" Click="button1_Click">Click Here to Display a RichEditControl from the Library Assemblies</Button>
        </StackPanel>
    </Grid>
</UserControl>
